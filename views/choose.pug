extends layout

block content
  h1= title
  p Welcome to #{title}.
  h2 Here are randomly chosen images:
  - var image_names = ["Fedora.jpeg", "Beanie.jpeg", "Snapback.jpeg","SunHat.jpeg", "TopHat.jpeg"];
  - for(let j=0;j<3;j++){
     - let rand=Math.floor(Math.random()*5)
     img(src=`/images/${image_names[rand]}` alt=`${rand}` height="300px" width="300px") 
  - }